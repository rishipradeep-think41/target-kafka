# Kafka target configuration
# Copy to .env and set values. Use with: target-kafka --config ENV

# Required: Kafka bootstrap servers (comma-separated)
TARGET_KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# Optional: prefix for all topic names
TARGET_KAFKA_TOPIC_PREFIX=

# Optional: record properties to use as Kafka message key (empty = round-robin)
# TARGET_KAFKA_KEY_PROPERTIES=["id"]

# Optional: records per batch (default 100)
TARGET_KAFKA_BATCH_SIZE=100

# Optional: compression (none, gzip, snappy, lz4, zstd)
TARGET_KAFKA_COMPRESSION_TYPE=snappy

# Optional: include _sdc_* metadata (default true)
TARGET_KAFKA_INCLUDE_SDC_PROPERTIES=true
